<Window x:Class="ChemGateBuilder.GalaxyMapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cluster Map" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        SizeChanged="GalaxyMapWindow_SizeChanged"
        PreviewMouseWheel="Window_PreviewMouseWheel">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Slider x:Name="HexagonWidthSlider"
                Grid.Row="0"
                Minimum="{Binding HexagonWidthMinimal}"
                Maximum="{Binding HexagonWidthMaximal}"
                Value="{Binding HexagonWidth}"
                TickFrequency="10" IsSnapToTickEnabled="True"
                TickPlacement="BottomRight"/>
        <ScrollViewer x:Name="GalaxyScrollViewer"
                        Grid.Row="1"
                        HorizontalScrollBarVisibility="Auto"
                        VerticalScrollBarVisibility="Auto"
                        Background="LightGray"
                        ScrollChanged="GalaxyScrollViewer_ScrollChanged">
            <Canvas x:Name="GalaxyCanvas"
                Background="LightGray"
                />
        </ScrollViewer>
    </Grid>
</Window>