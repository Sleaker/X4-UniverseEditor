<Window x:Class="ChemGateBuilder.ClusterMapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cluster Map" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        SizeChanged="ClusterMapWindow_SizeChanged"
        PreviewMouseWheel="Window_PreviewMouseWheel">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Slider x:Name="HexagonWidthSlider"
                Grid.Row="0"
                Minimum="{Binding HexagonWidthMinimal}"
                Maximum="{Binding HexagonWidthMaximal}"
                Value="{Binding HexagonWidth}"
                TickFrequency="10" IsSnapToTickEnabled="True"
                TickPlacement="BottomRight"/>
        <ScrollViewer x:Name="ClusterScrollViewer"
                        Grid.Row="1"
                        HorizontalScrollBarVisibility="Auto"
                        VerticalScrollBarVisibility="Auto"
                        ScrollChanged="ClusterScrollViewer_ScrollChanged">
            <Canvas x:Name="ClusterCanvas"
                Background="White"
                />
        </ScrollViewer>
    </Grid>
</Window>