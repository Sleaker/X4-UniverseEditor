<Window x:Class="ChemGateBuilder.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Chem Gate Builder"
        WindowStartupLocation="CenterOwner"
        Icon="{StaticResource BuilderIcon}"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight">
    <StackPanel Margin="10">
        <TextBlock Text="Chem Gate Builder" FontSize="20" FontWeight="Bold" Margin="10, 0, 10, 0" HorizontalAlignment="Center"/>
        <TextBlock Text="{Binding Version}" FontSize="16" Margin="5" HorizontalAlignment="Center" FontWeight="Bold"/>
        <Image Source="{StaticResource BuilderIcon}" Width="128" Height="128" Margin="10" HorizontalAlignment="Center"/>
        <TextBlock Text="{Binding Copyright}" Margin="10, 5, 0, 10" HorizontalAlignment="Center" FontWeight="Bold"/>
        <TextBlock Text="Components:" FontWeight="Bold" Margin="10, 10, 10, 5" HorizontalAlignment="Center"/>
        <ListBox ItemsSource="{Binding Components}" Margin="10, 5, 10, 10" HorizontalAlignment="Center" Height="100" SelectionMode="Single">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBlock Text="Informational links:" FontWeight="Bold" Margin="10, 10, 10, 5" HorizontalAlignment="Center"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Margin="5" HorizontalAlignment="Center">
                <Hyperlink NavigateUri="https://github.com/chemodun/X4-UniverseEditor" RequestNavigate="Hyperlink_RequestNavigate">GitHub</Hyperlink>
            </TextBlock>
            <TextBlock Grid.Column="1" Margin="5" HorizontalAlignment="Center">
                <Hyperlink NavigateUri="https://forum.egosoft.com/viewtopic.php?p=5262362" RequestNavigate="Hyperlink_RequestNavigate">EGOSOFT Forum</Hyperlink>
            </TextBlock>
            <TextBlock Grid.Column="2" Margin="5" HorizontalAlignment="Center">
                <Hyperlink NavigateUri="https://www.nexusmods.com/x4foundations/mods/1587/" RequestNavigate="Hyperlink_RequestNavigate">Nexus</Hyperlink>
            </TextBlock>
        </Grid>
        <Button Content="Close" Width="75" Margin="20, 20, 20, 10" HorizontalAlignment="Center" Click="CloseButton_Click"/>
    </StackPanel>
</Window>