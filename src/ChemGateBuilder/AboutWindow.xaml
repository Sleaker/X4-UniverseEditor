<Window x:Class="ChemGateBuilder.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Chem Gate Builder"
        WindowStartupLocation="CenterOwner"
        Icon="{StaticResource BuilderIcon}"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight">
    <StackPanel Margin="20">
        <TextBlock Text="Chem Gate Builder" FontSize="20" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>
        <TextBlock Text="{Binding Version}" Margin="10" HorizontalAlignment="Center"/>
        <TextBlock Text="{Binding Copyright}" Margin="10" HorizontalAlignment="Center"/>
        <TextBlock Text="Components:" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>
        <ListBox ItemsSource="{Binding Components}" Margin="10" HorizontalAlignment="Center">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBlock Text="Informational links:" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock Margin="5" HorizontalAlignment="Center">
                <Hyperlink NavigateUri="https://github.com/chemodun/X4-UniverseEditor" RequestNavigate="Hyperlink_RequestNavigate">GitHub</Hyperlink>
            </TextBlock>
            <TextBlock Margin="5" HorizontalAlignment="Center">
                <Hyperlink NavigateUri="https://forum.egosoft.com/viewtopic.php?p=5262362" RequestNavigate="Hyperlink_RequestNavigate">EGOSOFT Forum</Hyperlink>
            </TextBlock>
        </StackPanel>
        <Button Content="Ok" Width="75" Margin="0,20,0,0" HorizontalAlignment="Center" Click="CloseButton_Click"/>
    </StackPanel>
</Window>